<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Itmoexample" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_for_butt</item>
        <item name="colorPrimaryVariant">@color/inactive</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="title" parent="Theme.Itmoexample">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="inputField" parent="Theme.Itmoexample">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="line" parent="Theme.Itmoexample">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:background">@drawable/et_style</item>
    </style>
    <style name="button" parent="Theme.Itmoexample">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:background">@drawable/button_active</item>
        <item name="textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>